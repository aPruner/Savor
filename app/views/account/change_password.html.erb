<h1>Change Password</h1>
<p><%=@message%></p>
<!--<p>user  = <%=@authenticated_user%></p>-->
<%= form_tag account_make_password_change_path do %>
  <label for="current">Current Password: </label>
    <div class="field"><%= password_field_tag :current%></div>
  <label for="new">New Password: </label>
    <div class="field"><%= password_field_tag :new%></div>
  <label for="confirm">Confirm New Password: </label>
    <div class="field"><%= password_field_tag :confirm%></div>
  <%= submit_tag "Change Password", data: {confirm: "Are you sure?"} %>
<% end %>
