<h1>Edit Account</h1>

<div class="admin_class">

<%= form_tag account_make_edit_path do %>
  <label for="username">Username: </label>
    <div class="field"><%= text_field_tag :username, @username%></div>  <!--name = id -->
  <label for="first_name">First Name: </label>
    <div class="field"><%= text_field_tag :first_name, @first_name%></div>   <!--name = id -->
  <label for="email">Email: </label>
    <div class="field"><%= text_field_tag :email, @email%></div>  <!--name = id -->
  <label for="password">Enter password to confirm edits: </label>
    <div class="field"><%= password_field_tag :password%></div>  <!--name = id -->


  <%= submit_tag "Submit", data: {confirm: "Are you sure?"}%>
<% end %>

</div>
